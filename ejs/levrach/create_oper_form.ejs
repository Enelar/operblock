function CopyNameFromType( type, name )
{
  name
    .keyup(function()
    {
      $(this).prop('user_change', $(this).val().length > 0);
      console.log('keyup');
    });

  type
    .change(function()
    {
      var key = $(this).val();
      var val = 
        $(this)
          .siblings()
          .find('[role="option"] [data-option="' + key + '"]')
          .html();

      if (!name.prop('user_change'))
        name.val(val);
    });
}


